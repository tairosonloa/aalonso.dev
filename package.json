{
  "name": "aalonso.dev",
  "version": "3.0.0",
  "private": true,
  "scripts": {
    "dev": "gatsby develop",
    "prebuild": "node scripts/prebuild.js",
    "start": "npm run prebuild && npm run build && npm run serve",
    "build": "gatsby build",
    "serve": "gatsby serve",
    "clean": "gatsby clean",
    "test": "jest",
    "typecheck": "tsc",
    "g:production-build": "npm run prebuild && npm run build",
    "lint:ts": "eslint --fix \"**/*.{ts,tsx}\" --no-error-on-unmatched-pattern",
    "lint:css": "stylelint --fix \"**/*.scss\"",
    "lint:css:ci": "stylelint --max-warnings 0 \"**/*.scss\"",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,scss}\" \"*.{js,json}\"",
    "precommit": "npm run typecheck && npm run format && npm run lint:ts && npm run lint:css && npm run test"
  },
  "dependencies": {
    "classnames": "2.2.6",
    "gatsby": "2.32.9",
    "gatsby-plugin-google-gtag": "2.8.0",
    "gatsby-plugin-react-helmet": "3.10.0",
    "gatsby-plugin-sass": "3.2.0",
    "node-sass": "5.0.0",
    "react": "17.0.1",
    "react-cookie-consent": "6.2.3",
    "react-dom": "17.0.1",
    "react-helmet": "6.1.0",
    "remixicon": "2.5.0",
    "sanitize-html": "2.3.2",
    "sitemap": "6.4.0",
    "smoothscroll-polyfill": "0.4.4",
    "tsconfig-paths-webpack-plugin": "3.3.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "5.11.9",
    "@testing-library/react": "11.2.5",
    "@types/classnames": "2.2.11",
    "@types/jest": "26.0.20",
    "@types/node": "14.14.31",
    "@types/react": "17.0.2",
    "@types/react-dom": "17.0.1",
    "@types/react-helmet": "6.1.0",
    "@types/sanitize-html": "1.27.1",
    "@types/smoothscroll-polyfill": "0.3.1",
    "@typescript-eslint/eslint-plugin": "4.16.1",
    "@typescript-eslint/parser": "4.16.1",
    "babel-jest": "26.6.3",
    "babel-plugin-root-import": "6.6.0",
    "babel-preset-gatsby": "0.12.2",
    "eslint": "7.21.0",
    "eslint-config-airbnb-typescript-prettier": "4.1.0",
    "identity-obj-proxy": "3.0.0",
    "jest": "26.6.3",
    "lodash": "4.17.21",
    "netlify-cli": "3.10.6",
    "prettier": "2.2.1",
    "react-intersection-observer": "8.31.0",
    "react-test-renderer": "17.0.1",
    "stylelint": "13.11.0",
    "stylelint-config-prettier": "8.0.2",
    "stylelint-config-property-sort-order-smacss": "7.0.0",
    "stylelint-config-standard": "20.0.0",
    "stylelint-order": "4.1.0",
    "ts-jest": "26.5.3",
    "typescript": "4.2.3"
  },
  "author": "Aitor Alonso (@tairosonloa)",
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest",
      "^.+\\.jsx?$": "<rootDir>/__mocks__/jest-preprocess-gatsby.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.([tj]sx?)$",
    "moduleNameMapper": {
      ".+\\.(css|styl|less|sass|scss)$": "identity-obj-proxy",
      ".+\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/file-mock.js"
    },
    "moduleFileExtensions": ["ts","tsx","js","jsx","json","node"],
    "testPathIgnorePatterns": ["node_modules",".cache","public"],
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup.js"
    ],
    "globals": {
      "__PATH_PREFIX__": ""
    },
    "testURL": "http://localhost",
    "transformIgnorePatterns": ["node_modules/(?!(gatsby)/)"],
    "setupFiles": ["<rootDir>/__mocks__/loadershim.js"],
    "collectCoverage": true,
    "coverageDirectory": "./coverage",
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 80,
        "lines": 90,
        "statements": 90
      }
    }
  }
}
