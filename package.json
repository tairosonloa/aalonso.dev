{
  "name": "aalonso.dev",
  "version": "2.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "prebuild": "node scripts/prebuild.js",
    "build": "next build",
    "start": "next start",
    "export": "next export",
    "test": "jest",
    "typecheck": "tsc",
    "g:production-build": "npm run prebuild && next build && next export",
    "lint:ts": "eslint --fix \"**/*.{ts,tsx}\" --no-error-on-unmatched-pattern",
    "lint:css": "stylelint --fix \"**/*.scss\"",
    "lint:css:ci": "stylelint --max-warnings 0 \"**/*.scss\"",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,scss}\" \"*.{js,json}\"",
    "precommit": "npm run typecheck && npm run format && npm run lint:ts && npm run lint:css && npm run test"
  },
  "dependencies": {
    "classnames": "2.2.6",
    "next": "10.0.3",
    "next-seo": "4.17.0",
    "react": "17.0.1",
    "react-cookie-consent": "6.2.0",
    "react-dom": "17.0.1",
    "remixicon": "2.5.0",
    "sanitize-html": "2.2.0",
    "sass": "1.30.0",
    "sitemap": "6.3.3",
    "smoothscroll-polyfill": "0.4.4"
  },
  "devDependencies": {
    "@babel/core": "7.12.9",
    "@babel/plugin-proposal-class-properties": "7.12.1",
    "@babel/preset-typescript": "7.12.7",
    "@testing-library/jest-dom": "5.11.6",
    "@testing-library/react": "11.2.2",
    "@types/classnames": "2.2.11",
    "@types/jest": "26.0.17",
    "@types/lodash": "4.14.165",
    "@types/next": "9.0.0",
    "@types/node": "14.14.10",
    "@types/react": "17.0.0",
    "@types/react-dom": "17.0.0",
    "@types/sanitize-html": "1.27.0",
    "@types/smoothscroll-polyfill": "0.3.1",
    "@typescript-eslint/eslint-plugin": "4.9.1",
    "@typescript-eslint/parser": "4.9.1",
    "babel-loader": "8.2.2",
    "babel-preset-react-app": "10.0.0",
    "eslint": "7.15.0",
    "eslint-config-airbnb-typescript-prettier": "4.1.0",
    "jest": "26.6.3",
    "lodash": "4.17.20",
    "netlify-cli": "2.69.3",
    "prettier": "2.2.1",
    "react-intersection-observer": "8.31.0",
    "stylelint": "13.8.0",
    "stylelint-config-prettier": "8.0.2",
    "stylelint-config-property-sort-order-smacss": "7.0.0",
    "stylelint-config-standard": "20.0.0",
    "stylelint-order": "4.1.0",
    "typescript": "4.1.2"
  },
  "author": "Aitor Alonso (@tairosonloa)",
  "jest": {
    "transform": {
      "^.+\\.module.scss$": "<rootDir>/__mocks__/styleMock.js",
      "^.+\\.[t|j]sx?$": "babel-jest"
    },
    
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup.js"
    ],
    "collectCoverage": true,
    "coverageDirectory": "./coverage",
    "coverageThreshold": {
      "global": {
        "branches": 60,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
