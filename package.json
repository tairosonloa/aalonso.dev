{
  "name": "aalonso.dev",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "prebuild": "node scripts/prebuild.js",
    "build": "next build",
    "start": "next start",
    "export": "next export",
    "test": "jest",
    "storybook": "start-storybook -s ./public -p 6006",
    "build-storybook": "build-storybook",
    "typecheck": "tsc",
    "g:component": "hygen component new",
    "g:production-build": "npm run prebuild && next build && next export",
    "lint:ts": "eslint --fix \"**/*.{ts,tsx}\" --no-error-on-unmatched-pattern",
    "lint:css": "stylelint --fix \"**/*.scss\"",
    "lint:css:ci": "stylelint --max-warnings 0 \"**/*.scss\"",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,scss}\" \"*.{js,json}\"",
    "precommit": "npm run typecheck && npm run format && npm run lint:ts && npm run lint:css && npm run test"
  },
  "dependencies": {
    "@loadable/component": "5.14.1",
    "animate.css": "4.1.1",
    "classnames": "2.2.6",
    "devicon": "2.2.0",
    "lodash": "4.17.20",
    "next": "9.5.5",
    "next-seo": "4.14.0",
    "react": "16.14.0",
    "react-cookie-consent": "5.2.0",
    "react-dom": "16.14.0",
    "react-intersection-observer": "8.29.1",
    "remixicon": "2.5.0",
    "sanitize-html": "2.1.1",
    "sass": "1.27.0",
    "sitemap": "6.3.2",
    "smoothscroll-polyfill": "0.4.4"
  },
  "devDependencies": {
    "@babel/core": "7.12.3",
    "@babel/plugin-proposal-class-properties": "7.12.1",
    "@babel/preset-typescript": "7.12.1",
    "@storybook/addon-actions": "6.0.27",
    "@storybook/addon-backgrounds": "5.3.21",
    "@storybook/addon-links": "6.0.27",
    "@storybook/addon-viewport": "5.3.21",
    "@storybook/addons": "5.3.21",
    "@storybook/react": "5.3.21",
    "@testing-library/jest-dom": "5.11.5",
    "@testing-library/react": "11.1.0",
    "@types/classnames": "2.2.10",
    "@types/jest": "26.0.15",
    "@types/loadable__component": "5.13.1",
    "@types/lodash": "4.14.162",
    "@types/next": "9.0.0",
    "@types/node": "14.14.2",
    "@types/react": "16.9.53",
    "@types/react-dom": "16.9.8",
    "@types/sanitize-html": "1.27.0",
    "@types/smoothscroll-polyfill": "0.3.1",
    "@typescript-eslint/eslint-plugin": "3.10.1",
    "@typescript-eslint/parser": "4.5.0",
    "babel-loader": "8.1.0",
    "babel-preset-react-app": "9.1.2",
    "eslint": "7.12.0",
    "eslint-config-airbnb-typescript-prettier": "3.1.0",
    "hygen": "6.0.4",
    "jest": "26.6.1",
    "netlify-cli": "2.65.7",
    "prettier": "2.1.2",
    "stylelint": "13.7.2",
    "stylelint-config-prettier": "8.0.2",
    "stylelint-config-property-sort-order-smacss": "6.3.0",
    "stylelint-config-standard": "20.0.0",
    "stylelint-order": "4.1.0",
    "typescript": "4.0.3"
  },
  "author": "Aitor Alonso (@tairosonloa)",
  "jest": {
    "transform": {
      "^.+\\.module.scss$": "<rootDir>/__mocks__/styleMock.js",
      "^.+\\.[t|j]sx?$": "babel-jest"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup.js"
    ],
    "collectCoverage": true,
    "coverageDirectory": "./coverage",
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
