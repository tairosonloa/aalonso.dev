{
  "name": "aalonso.dev",
  "version": "3.0.0",
  "private": true,
  "scripts": {
    "dev": "gatsby develop",
    "prebuild": "node scripts/prebuild.js",
    "build": "gatsby build",
    "serve": "gatsby serve",
    "clean": "gatsby clean",
    "test": "jest",
    "typecheck": "tsc",
    "g:production-build": "npm run prebuild && npm run build",
    "lint:ts": "eslint --fix \"**/*.{ts,tsx}\" --no-error-on-unmatched-pattern",
    "lint:css": "stylelint --fix \"**/*.scss\"",
    "lint:css:ci": "stylelint --max-warnings 0 \"**/*.scss\"",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,scss}\" \"*.{js,json}\"",
    "precommit": "npm run typecheck && npm run format && npm run lint:ts && npm run lint:css && npm run test"
  },
  "dependencies": {
    "classnames": "2.2.6",
    "gatsby": "2.31.1",
    "gatsby-plugin-google-gtag": "^2.7.0",
    "gatsby-plugin-react-helmet": "^3.9.0",
    "gatsby-plugin-sass": "^3.1.0",
    "node-sass": "^5.0.0",
    "react": "17.0.1",
    "react-cookie-consent": "6.2.1",
    "react-dom": "17.0.1",
    "react-helmet": "^6.1.0",
    "remixicon": "2.5.0",
    "sanitize-html": "2.3.1",
    "sitemap": "6.3.5",
    "smoothscroll-polyfill": "0.4.4",
    "tsconfig-paths-webpack-plugin": "3.3.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "5.11.9",
    "@testing-library/react": "11.2.3",
    "@types/classnames": "2.2.11",
    "@types/jest": "26.0.20",
    "@types/node": "14.14.22",
    "@types/react": "17.0.0",
    "@types/react-dom": "17.0.0",
    "@types/react-helmet": "^6.1.0",
    "@types/sanitize-html": "1.27.1",
    "@types/smoothscroll-polyfill": "0.3.1",
    "@typescript-eslint/eslint-plugin": "4.14.0",
    "@typescript-eslint/parser": "4.14.0",
    "babel-plugin-root-import": "6.6.0",
    "eslint": "7.18.0",
    "eslint-config-airbnb-typescript-prettier": "4.1.0",
    "jest": "26.6.3",
    "lodash": "4.17.20",
    "netlify-cli": "3.4.2",
    "prettier": "2.2.1",
    "react-intersection-observer": "8.31.0",
    "stylelint": "13.9.0",
    "stylelint-config-prettier": "8.0.2",
    "stylelint-config-property-sort-order-smacss": "7.0.0",
    "stylelint-config-standard": "20.0.0",
    "stylelint-order": "4.1.0",
    "typescript": "4.1.3"
  },
  "author": "Aitor Alonso (@tairosonloa)",
  "jest": {
    "transform": {
      "^.+\\.module.scss$": "<rootDir>/__mocks__/styleMock.js",
      "^.+\\.[t|j]sx?$": "babel-jest"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup.js"
    ],
    "collectCoverage": true,
    "coverageDirectory": "./coverage",
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
